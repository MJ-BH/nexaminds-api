{
  "compilerOptions": {
    "target": "ES2022",             
    "module": "commonjs",           
    "rootDir": "./src",             
    "outDir": "./dist",             
    "strict": true,                 // Senior Mode enabled
    "esModuleInterop": true,        
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}